

<!DOCTYPE html>
<html>

  <body>
    <form action= "<%= cat_url(cat) %>" method="post">
      <input type="hidden" name="_method" value="PATCH">
      <label for="cat_name">Name:</label>
      <input type="text" id="cat_name" name="cat[name]" value="<%= cat.name %>">

<br>
<br>
      <label> Sex: </label>
      <input type="radio" id='cat_sex_m' name="cat[sex]" value="M"  <%= cat.sex == "M" ? "checked" : ""  %>  >
      <label for="cat_sex_m">Male</label>
      <input type="radio" id='cat_sex_f' name="cat[sex]" value="F"  <%= cat.sex == "F" ? "checked" : ""  %> >
      <label for="cat_sex_f">Female</label>

<br>
<br>
      <label for="cat_description">Description</label>
      <textarea id="cat_description" name='cat[description]'><%= cat.description%></textarea>

<br>
<br>

      <label for="cat_color">Color</label>
      <select name="cat[color]">
        <option disabled> Color </option>
        <% colors = %w(black white orange tuxedo tiger-striped calico) %>
        <% colors.each do |color| %>
          <option value="<%=color%>"<%= cat.color == color ? 'selected' : ''  %> >
             <%= color.capitalize %>
          </option>
        <% end %>
      </select>

<br>
<br>

      <label for="cat_birth_date">Birth Date:</label>
      <input type="date" name="cat[birth_date]" value='<%= cat.birth_date %>'>

<br>
<br>

      <input type="submit" value="Rebuild my cat!">
    </form>

  </body>
</html>
